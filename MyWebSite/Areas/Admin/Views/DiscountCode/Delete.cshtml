@model MyWebSite.Models.DiscountCode
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Xóa Mã Giảm Giá";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-danger">Xác Nhận Xóa</h2>
        <p class="text-muted">Bạn có chắc chắn muốn xóa mã giảm giá này không?</p>
    </div>

    <div class="card shadow-sm rounded-4 p-4 mb-4">
        <div class="mb-3">
            <h5 class="fw-semibold">Tên mã:</h5>
            <p>@Model.Code</p>
        </div>
        <div class="mb-3">
            <h5 class="fw-semibold">Giảm (%):</h5>
            <p>@Model.DiscountPercentage%</p>
        </div>
        <div class="mb-3">
            <h5 class="fw-semibold">Số lượt sử dụng:</h5>
            <p>@Model.UsageCount / @Model.MaxUsage</p>
        </div>
        <div class="mb-3">
            <h5 class="fw-semibold">Thời gian hiệu lực:</h5>
            <p>@Model.ValidFrom.ToString("dd/MM/yyyy") - @Model.ValidTo.ToString("dd/MM/yyyy")</p>
        </div>
        <div class="mb-3">
            <h5 class="fw-semibold">Trạng thái:</h5>
            <span class="badge @(Model.Status ? "bg-success" : "bg-secondary")">
                @(Model.Status ? "Còn hiệu lực" : "Hết hạn")
            </span>
        </div>
    </div>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger rounded-pill px-4 me-2">Xác nhận xóa</button>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Quay lại</a>
    </form>
</div>
