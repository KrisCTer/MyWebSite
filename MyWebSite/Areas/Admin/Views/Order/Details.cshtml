@model MyWebSite.Models.Order
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';">
    <h1 style="font-size: 28px; font-weight: 600; color: #1d1d1f; margin-bottom: 20px;">Order Details</h1>

    <div style="background-color: #f4f4f5; padding: 30px; border-radius: 12px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h4 style="font-size: 20px; font-weight: 500; color: #1d1d1f; margin-bottom: 20px;">Order Information</h4>

        <div style="margin-bottom: 30px;">
            <dl class="row" style="font-size: 16px; color: #1d1d1f;">
                <dt class="col-sm-4" style="font-weight: 500; color: #86868b;">
                    @Html.DisplayNameFor(model => model.OrderDate)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>
                <dt class="col-sm-4" style="font-weight: 500; color: #86868b;">
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TotalPrice)
                </dd>
                <dt class="col-sm-4" style="font-weight: 500; color: #86868b;">
                    @Html.DisplayNameFor(model => model.ShippingAddress)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ShippingAddress)
                </dd>
                <dt class="col-sm-4" style="font-weight: 500; color: #86868b;">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-4" style="font-weight: 500; color: #86868b;">
                    @Html.DisplayNameFor(model => model.Notes)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Notes)
                </dd>
                <dt class="col-sm-4" style="font-weight: 500; color: #86868b;">
                    @Html.DisplayNameFor(model => model.ApplicationUser)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ApplicationUser.Id)
                </dd>
            </dl>
        </div>

        <div style="margin-top: 30px;">
            <a asp-action="Edit" asp-route-id="@Model?.Id" style="background-color: #007bff; color: white; padding: 12px 20px; border: none; border-radius: 8px; cursor: pointer; font-size: 16px; text-decoration: none;">Edit</a>
            <a asp-action="Index" style="margin-left: 10px; color: #007bff; text-decoration: none;">Back to List</a>
        </div>
    </div>
</div>