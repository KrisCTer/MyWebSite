@model MyWebSite.Models.Order
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';">
    <h2 style="font-size: 28px; font-weight: 600; margin-bottom: 20px; color: #1d1d1f;">Edit Order</h2>

    <div style="background-color: #f4f4f5; padding: 30px; border-radius: 12px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div style="margin-bottom: 20px;">
                <label asp-for="OrderDate" style="display: block; font-size: 14px; color: #86868b; margin-bottom: 5px;">Order Date</label>
                <input asp-for="OrderDate" class="form-control" type="datetime-local" style="width: 100%; padding: 12px; border: 1px solid #d1d1d6; border-radius: 8px; background-color: white;" />
                <span asp-validation-for="OrderDate" class="text-danger" style="font-size: 12px;"></span>
            </div>

            <div style="margin-bottom: 20px;">
                <label asp-for="UserId" style="display: block; font-size: 14px; color: #86868b; margin-bottom: 5px;">Customer ID</label>
                <input asp-for="UserId" class="form-control" style="width: 100%; padding: 12px; border: 1px solid #d1d1d6; border-radius: 8px; background-color: white;" />
                <span asp-validation-for="UserId" class="text-danger" style="font-size: 12px;"></span>
            </div>

            <div style="margin-bottom: 20px;">
                <label asp-for="TotalPrice" style="display: block; font-size: 14px; color: #86868b; margin-bottom: 5px;">Total Amount</label>
                <input asp-for="TotalPrice" class="form-control" style="width: 100%; padding: 12px; border: 1px solid #d1d1d6; border-radius: 8px; background-color: white;" />
                <span asp-validation-for="TotalPrice" class="text-danger" style="font-size: 12px;"></span>
            </div>

            <div style="margin-bottom: 20px;">
                <label asp-for="Status" style="display: block; font-size: 14px; color: #86868b; margin-bottom: 5px;">Status</label>
                <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-control" style="width: 100%; padding: 12px; border: 1px solid #d1d1d6; border-radius: 8px; background-color: white;">
                </select>
                <span asp-validation-for="Status" class="text-danger" style="font-size: 12px;"></span>
            </div>

            <div style="margin-top: 30px;">
                <input type="submit" value="Save" style="background-color: #007bff; color: white; padding: 12px 20px; border: none; border-radius: 8px; cursor: pointer; font-size: 16px;" />
                <a asp-action="Index" style="margin-left: 10px; color: #007bff; text-decoration: none;">Back to List</a>
            </div>
        </form>
    </div>
</div>