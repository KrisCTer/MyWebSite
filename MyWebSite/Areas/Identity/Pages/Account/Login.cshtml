@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';">
    <h1 style="font-size: 30px; font-weight: 600; color: #333; margin-bottom: 20px; text-align: center; margin-top: 60px;">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-4" style="background-color: #fff; padding: 30px; border-radius: 16px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);">
            <section>
                <form id="account" method="post">
                    <h2 style="font-size: 22px; font-weight: 500; color: #333; margin-bottom: 20px; text-align: center;">Log in with your account</h2>
                    <hr style="border-top: 1px solid #e6e6e6; margin-bottom: 30px;" />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert" style="font-size: 14px; text-align: center;"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="padding: 16px; font-size: 16px; border-radius: 12px; border: 1px solid #ccc; background-color: #f8f8f8;" />
                        <label asp-for="Input.Email" class="form-label" style="font-size: 14px; color: #999;">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger" style="font-size: 12px;"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" style="padding: 16px; font-size: 16px; border-radius: 12px; border: 1px solid #ccc; background-color: #f8f8f8;" />
                        <label asp-for="Input.Password" class="form-label" style="font-size: 14px; color: #999;">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger" style="font-size: 12px;"></span>
                    </div>

                    <div class="checkbox mb-4">
                        <label asp-for="Input.RememberMe" class="form-label" style="font-size: 14px; color: #333;">
                            <input class="form-check-input" asp-for="Input.RememberMe" style="margin-right: 5px;" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-primary" style="background-color: #0071e3; color: white; padding: 14px 20px; border-radius: 12px; font-size: 16px; border: none; cursor: pointer;">Log In</button>
                    </div>
                    <div style="margin-top: 30px; text-align: center;">
                        <p style="font-size: 14px;">
                            <a id="forgot-password" asp-page="./ForgotPassword" style="color: #0071e3; text-decoration: none;">Forgot your password?</a>
                        </p>
                        <p style="font-size: 14px;">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: #0071e3; text-decoration: none;">Sign up for a new account</a>
                        </p>
                        <p style="font-size: 14px;">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="color: #0071e3; text-decoration: none;">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>

        <div class="col-md-4" style="margin-top: 30px;">
            <section>
                <h3 style="font-size: 20px; font-weight: 500; color: #333; text-align: center; margin-bottom: 20px;">Use another service to log in</h3>
                <hr style="border-top: 1px solid #e6e6e6; margin-bottom: 30px;" />

                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div style="text-align: center;">
                        <p style="font-size: 14px;">
                            There are no external authentication services configured. For setup instructions, visit
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715" style="color: #0071e3; text-decoration: none;">this article</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div style="text-align: center;">
                            <p style="font-size: 14px;">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" style="background-color: #0071e3; color: white; padding: 14px 20px; border-radius: 12px; font-size: 16px; border: none; cursor: pointer; margin-right: 10px;">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
