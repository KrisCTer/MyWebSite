@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container mt-5" style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;">
    <h1 class="text-center mb-4" style="font-size: 32px; font-weight: 600; color: #1d1d1f;">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="p-4 text-center" style="background-color: #fff; border-radius: 18px; box-shadow: 0 8px 24px rgba(0,0,0,0.06);">
                @{
                    if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <form asp-area="Identity"
                              asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                              method="post">
                            <p style="font-size: 16px; margin-bottom: 24px;">Are you sure you want to log out?</p>
                            <button type="submit"
                                    class="btn btn-primary"
                                    style="background-color: #0071e3; padding: 12px 24px; border-radius: 12px; font-size: 16px; font-weight: 500; border: none;">
                                Log Out
                            </button>
                        </form>
                    }
                    else
                    {
                        <p style="font-size: 16px; color: #333;">You have successfully logged out of the application.</p>
                    }
                }
            </div>
        </div>
    </div>
</div>
