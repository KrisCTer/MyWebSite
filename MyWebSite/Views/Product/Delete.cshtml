@model MyWebSite.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-md-8 mx-auto text-center">
            <h2 class="fw-light mb-4" style="font-size: 32px; letter-spacing: -0.5px;">Delete Product</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none" style="color: #0066CC;">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none" style="color: #0066CC;">Products</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-0">
                    <div class="text-center p-5">
                        <i class="bi bi-exclamation-circle" style="font-size: 3rem; color: #FF3B30;"></i>
                        <h3 class="fw-light mt-4 mb-3" style="letter-spacing: -0.5px;">Are you sure you want to delete this product?</h3>
                        <p class="text-secondary mb-5">This action cannot be undone.</p>
                    </div>

                    <div class="bg-light p-4">
                        <div class="row align-items-center">
                            <div class="col-md-3 mb-3 mb-md-0 text-center">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded-3" style="max-height: 120px; object-fit: contain;" />
                                }
                                else
                                {
                                    <div class="bg-white p-4 rounded-3" style="height: 120px; display: flex; align-items: center; justify-content: center;">
                                        <span class="text-secondary" style="font-size: 14px;">No image</span>
                                    </div>
                                }
                            </div>
                            <div class="col-md-9">
                                <h4 class="fw-normal mb-2" style="letter-spacing: -0.5px;">@Model.Name</h4>
                                <p class="mb-2 text-secondary" style="font-size: 15px;">$@Model.Price.ToString("0.00")</p>
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <p class="mb-0 text-secondary" style="font-size: 14px;">@(Model.Description.Length > 100 ? Model.Description.Substring(0, 100) + "..." : Model.Description)</p>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="p-5">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-lg py-3 text-white fw-normal" style="background-color: #FF3B30; border-radius: 8px;">
                                    Delete Product
                                </button>
                                <a asp-action="Index" class="btn btn-lg py-3 fw-normal text-decoration-none" style="background-color: #F5F5F7; color: #000; border-radius: 8px;">
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>