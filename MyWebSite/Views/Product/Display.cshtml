@model MyWebSite.Models.Product

<div class="apple-container">
    <!-- Breadcrumb với thiết kế Apple -->
    <div class="apple-breadcrumb">
        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
        <span class="separator">/</span>
        <a asp-action="Index">Sản phẩm</a>
        <span class="separator">/</span>
        <span class="current">@Model.Name</span>
    </div>

    <div class="product-detail-container">
        <!-- Hình ảnh sản phẩm -->
        <div class="product-image-section">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="product-image">
                    <img src="@Model.ImageUrl" alt="@Model.Name" />
                </div>
            }
            else
            {
                <div class="product-image-placeholder">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#d1d1d6" class="bi bi-camera" viewBox="0 0 16 16">
                        <path d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1v6zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2z" />
                        <path d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5zm0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7zM3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                    </svg>
                    <p>Không có hình ảnh</p>
                </div>
            }
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="product-info-section">
            <h1 class="product-title">@Model.Name</h1>

            @if (Model.CategoryId > 0)
            {
                <div class="product-category">
                    <span>@ViewBag.CategoryName</span>
                </div>
            }

            <div class="product-price">
                <span>@Model.Price.ToString("C")</span>
            </div>

            <div class="product-description">
                <h2>Mô tả</h2>
                <p>@Model.Description</p>
            </div>

            @* <div class="product-actions"> *@
            @*     <a href="#" class="primary-button"> *@
            @*         <span>Thêm vào giỏ hàng</span> *@
            @*     </a> *@

            <div class="secondary-buttons">
                <a asp-action="Update" asp-route-id="@Model.Id" class="secondary-button">
                    <span>Chỉnh sửa</span>
                </a>
                <a asp-action="Index" class="secondary-button">
                    <span>Quay lại</span>
                </a>
            </div>
        </div>
    </div>
</div>
</div>

<style>
    /* Phong cách Apple */
    body {
        font-family: 'SF Pro Text', 'SF Pro Icons', 'Helvetica Neue', Helvetica, Arial, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        background-color: #f5f5f7;
        color: #1d1d1f;
        margin: 0;
        padding: 0;
    }

    .apple-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    /* Breadcrumb kiểu Apple */
    .apple-breadcrumb {
        display: flex;
        align-items: center;
        font-size: 14px;
        margin-bottom: 40px;
    }

        .apple-breadcrumb a {
            color: #6e6e73;
            text-decoration: none;
        }

            .apple-breadcrumb a:hover {
                text-decoration: underline;
            }

        .apple-breadcrumb .separator {
            margin: 0 10px;
            color: #d2d2d7;
        }

        .apple-breadcrumb .current {
            color: #1d1d1f;
        }

    /* Container sản phẩm */
    .product-detail-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
    }

    @@media(max - width: 768px) {
            .product-detail-container {
                grid-template-columns: 1fr;
            }
        }

        /* Phần hình ảnh */
        .product-image-section {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .product-image {
            width: 100%;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        }

            .product-image img {
                width: 100%;
                height: auto;
                display: block;
            }

        .product-image-placeholder {
            width: 100%;
            height: 400px;
            background-color: #f5f5f7;
            border-radius: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #86868b;
        }

        /* Phần thông tin sản phẩm */
        .product-info-section {
            display: flex;
            flex-direction: column;
        }

        .product-title {
            font-size: 40px;
            font-weight: 600;
            line-height: 1.1;
            letter-spacing: 0;
            margin: 0 0 20px 0;
        }

        .product-category {
            margin-bottom: 16px;
        }

            .product-category span {
                background-color: #f5f5f7;
                color: #6e6e73;
                padding: 6px 16px;
                border-radius: 20px;
                font-size: 14px;
            }

        .product-price {
            font-size: 24px;
            font-weight: 600;
            color: #1d1d1f;
            margin-bottom: 30px;
        }

        .product-description {
            margin-bottom: 40px;
        }

            .product-description h2 {
                font-size: 24px;
                font-weight: 600;
                margin: 0 0 16px 0;
            }

            .product-description p {
                line-height: 1.5;
                color: #515154;
                font-size: 17px;
            }

        /* Phần nút */
        .product-actions {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .primary-button {
            background-color: #0071e3;
            color: white;
            border-radius: 980px;
            font-size: 17px;
            font-weight: 400;
            text-align: center;
            padding: 12px 22px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            width: 100%;
        }

            .primary-button:hover {
                background-color: #0077ed;
            }

        .secondary-buttons {
            display: flex;
            gap: 12px;
        }

        .secondary-button {
            background-color: #0071e3;
            color: white;
            border-radius: 980px;
            font-size: 17px;
            font-weight: 400;
            text-align: center;
            padding: 12px 22px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            flex: 1;
        }

            .secondary-button:hover {
                background-color: #e8e8ed;
            }
    </style>