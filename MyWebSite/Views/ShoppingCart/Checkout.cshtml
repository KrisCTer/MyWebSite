@model Order

<div class="container py-5">
    <div class="row g-4">
        <!-- Checkout Form -->
        <div class="col-lg-8">
            <div class="p-4 shadow-sm" style="border-radius: 18px; background-color: #fff;">
                <h2 class="mb-4" style="font-weight: 600;">Checkout Information</h2>
                <form asp-action="Checkout" method="post">
                    <!-- Shipping Address -->
                    <div class="mb-4">
                        <label asp-for="ShippingAddress" class="form-label" style="font-weight: 500;">Shipping Address <span class="text-danger">*</span></label>
                        <input asp-for="ShippingAddress" class="form-control" style="border-radius: 12px;" required />
                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                    </div>

                    <!-- Notes -->
                    <div class="mb-4">
                        <label asp-for="Notes" class="form-label" style="font-weight: 500;">Order Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Special instructions..." style="border-radius: 12px;"></textarea>
                    </div>

                    <!-- Voucher Code -->
                    <div class="mb-4">
                        <label for="voucherCodeInput" class="form-label" style="font-weight: 500;">Voucher Code</label>
                        <input type="text" id="voucherCodeInput" class="form-control" placeholder="Enter Voucher Code" style="border-radius: 12px;" />
                        <button type="button" id="applyVoucherBtn" class="btn btn-secondary mt-2" style="border-radius: 12px;">Apply Voucher</button>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary" style="border-radius: 980px; padding: 12px 28px;">
                            <i class="bi bi-bag-check-fill me-1"></i> Place Order
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="p-4 shadow-sm" style="border-radius: 18px; background-color: #f5f5f7;">
                <h3 class="mb-4" style="font-weight: 600;">Order Summary</h3>
                <div class="mb-3">
                    <ul class="list-group list-group-flush">
                        @* @foreach (var item in Model.Items) *@
                        @* { *@
                        @*     <li class="list-group-item d-flex justify-content-between align-items-center"> *@
                        @*         <span>@item.Name (x@item.Quantity)</span> *@
                        @*         <strong>@((item.Price * item.Quantity).ToString("C"))</strong> *@
                        @*     </li> *@
                        @* } *@
                    </ul>
                </div>

                <hr />
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Subtotal:</span>
                    <span class="fw-semibold" id="subtotalPrice">@Model.TotalPrice.ToString("C")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Discount:</span>
                    <span id="discountAmount" class="fw-semibold">0</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="fw-bold">Total:</span>
                    <span id="totalPrice" class="fw-bold">@Model.TotalPrice.ToString("C")</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('form').submit(function () {
                $(this).find('button[type="submit"]').prop('disabled', true)
                    .html('<i class="bi bi-arrow-repeat me-1 spin"></i> Processing...');
            });

            // Áp dụng mã giảm giá
            $('#applyVoucherBtn').click(function () {
                var voucherCode = $('#voucherCodeInput').val();

                $.ajax({
                    url: '@Url.Action("ApplyDiscountCode", "ShoppingCart")',  // Đảm bảo URL đúng với controller của bạn
                    type: 'POST',
                    data: { voucherCode: voucherCode },
                    success: function (data) {
                        if (data.success) {
                            // Lấy tổng giá trị ban đầu từ Model và tính giá trị mới sau khi giảm giá
                            var originalTotalPrice = @Model.TotalPrice;
                            var discountAmount = (originalTotalPrice * data.discountPercentage) / 100;
                            var newTotal = originalTotalPrice - discountAmount;
                            @Model.TotalPrice = newTotal;
                            console.log("discount amount: ", newTotal)
                            // Cập nhật giá trị mới vào giao diện
                            $('#discountAmount').text("-" + discountAmount.toFixed(2));
                            $('#totalPrice').text("$" + newTotal.toFixed(2)); // Cập nhật tổng giá trị với giảm giá
                        } 
                    },
                    error: function () {
                        alert("Có lỗi xảy ra khi áp dụng mã giảm giá.");
                    }
                });
            });
        });
    </script>
    <style>
        .spin {
            animation: spin 1s linear infinite;
        }

       
        
    </style>
}
