@model Order

<div class="container mt-4">
    <div class="row">
        <!-- Order Form -->
        <div class="col-md-8">
            <div class="card" style="border-radius: 12px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <div class="card-header bg-primary text-white" style="border-radius: 12px 12px 0 0;">
                    <h2 class="mb-0">Checkout Information</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Checkout" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="ShippingAddress" class="font-weight-bold">Shipping Address*</label>
                            <input asp-for="ShippingAddress" class="form-control" required style="border-radius: 8px;" />
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>

                        <!-- Order Notes -->
                        <div class="form-group mb-3">
                            <label asp-for="Notes" class="font-weight-bold">Order Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"
                            placeholder="Special instructions for your order..." style="border-radius: 8px;"></textarea>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success btn-lg btn-block" style="border-radius: 12px; padding: 12px 20px;">
                                <i class="fas fa-check-circle"></i> Place Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-md-4">
            <div class="card" style="border-radius: 12px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <div class="card-header bg-info text-white" style="border-radius: 12px 12px 0 0;">
                    <h3 class="mb-0">Order Summary</h3>
                </div>
                <div class="card-body">
                    <h5>Items</h5>
                    <ul class="list-group mb-3" style="border-radius: 8px;">
                        @* @foreach (var item in Model.Items) *@
                        @* { *@
                        @*     <li class="list-group-item d-flex justify-content-between" style="border-radius: 8px;"> *@
                        @*         <span>@item.Name (x@(item.Quantity))</span> *@
                        @*         <span>@((item.Price * item.Quantity).ToString("C"))</span> *@
                        @*     </li> *@
                        @* } *@
                    </ul>

                    <div class="border-top pt-2">
                        <div class="d-flex justify-content-between font-weight-bold">
                            <span>Subtotal:</span>
                            <span>@Model.TotalPrice.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <span class="font-weight-bold">Total:</span>
                            <span class="font-weight-bold">@Model.TotalPrice.ToString("C")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Disable submit button and show loading spinner
            $('form').submit(function() {
                $(this).find('button[type="submit"]').prop('disabled', true)
                       .html('<i class="fas fa-spinner fa-spin"></i> Processing...');
            });
        });
    </script>
}
