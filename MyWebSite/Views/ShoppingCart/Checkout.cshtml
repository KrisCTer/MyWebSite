@model OrderDetail
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Thông tin giao hàng - Nội Thất MOHO</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css" />
	<style>
		:root {
			--primary-color: #1a73e8;
			--text-color: #333;
			--light-gray: #f5f5f7;
			--border-color: #e0e0e0;
		}

		body {
			font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
			color: var(--text-color);
			background-color: #fff;
			line-height: 1.5;
		}

		.breadcrumb {
			margin: 20px 0;
			font-size: 14px;
		}

			.breadcrumb a {
				color: #666;
				text-decoration: none;
			}

		.breadcrumb-item.active {
			color: #333;
		}

		.page-title {
			font-size: 24px;
			font-weight: 600;
			margin-bottom: 30px;
			color: #333;
		}

		.form-control, .form-select {
			padding: 10px 15px;
			border-radius: 6px;
			border: 1px solid var(--border-color);
			margin-bottom: 15px;
		}

		.form-label {
			font-weight: 500;
			margin-bottom: 6px;
			color: #555;
		}

		.btn-primary {
			background-color: var(--primary-color);
			border: none;
			padding: 12px 20px;
			font-size: 16px;
			font-weight: 500;
			border-radius: 6px;
		}

			.btn-primary:hover {
				background-color: #0f62d9;
			}

		.card {
			border-radius: 10px;
			border: 1px solid var(--border-color);
			box-shadow: 0 2px 5px rgba(0,0,0,0.05);
			margin-bottom: 20px;
		}

		.card-header {
			background-color: #fff;
			border-bottom: 1px solid var(--border-color);
			padding: 15px 20px;
			font-weight: 600;
		}

		.card-body {
			padding: 20px;
		}

		.shipping-option {
			border: 1px solid var(--border-color);
			border-radius: 8px;
			padding: 12px 15px;
			margin-bottom: 15px;
		}

			.shipping-option.selected {
				border-color: var(--primary-color);
				background-color: rgba(26, 115, 232, 0.05);
			}

		.payment-option {
			margin-bottom: 10px;
		}

		.order-summary {
			background-color: #f9f9f9;
			border-radius: 8px;
			padding: 15px;
		}

			.order-summary .row {
				margin-bottom: 10px;
				font-size: 15px;
			}

			.order-summary .total {
				font-size: 18px;
				font-weight: 600;
				border-top: 1px solid #ddd;
				padding-top: 10px;
				margin-top: 10px;
			}

		.product-list {
			margin-top: 20px;
		}

		.product-item {
			padding: 10px 0;
			border-bottom: 1px solid #eee;
		}

			.product-item:last-child {
				border-bottom: none;
			}

		.login-prompt {
			background-color: #f8f9fa;
			padding: 15px;
			border-radius: 8px;
			margin-bottom: 20px;
		}

			.login-prompt a {
				color: var(--primary-color);
				font-weight: 500;
			}


		/* Sidebar styling */
		.cart-sidebar {
			background-color: #fff;
			border-radius: 10px;
			border: 1px solid var(--border-color);
		}

			.cart-sidebar .card-header {
				font-size: 18px;
			}

		.price-row {
			display: flex;
			justify-content: space-between;
			margin-bottom: 8px;
		}

		.total-price {
			font-size: 18px;
			font-weight: 600;
		}

		.discount-input {
			display: flex;
			margin-top: 15px;
		}

			.discount-input input {
				border-top-right-radius: 0;
				border-bottom-right-radius: 0;
			}

			.discount-input button {
				border-top-left-radius: 0;
				border-bottom-left-radius: 0;
			}

	</style>
</head>
<body>
	<div class="container mt-4 mb-5">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="#">Giỏ hàng</a></li>
				<li class="breadcrumb-item active">Thông tin giao hàng</li>
			</ol>
		</nav>

		<h1 class="page-title">Thông tin giao hàng</h1>

		<div class="row">
			<div class="col-lg-8">
				<div class="card mb-4">
					<div class="card-body">
						<form id="checkoutForm">
							

							<div class="mb-3">
								<label for="FullName" class="form-label">Họ Và Tên</label>
								<input type="text" class="form-control" id="fullName" placeholder="Nhập họ và tên" required value="@Model.">
							</div>

							<div class="row">
								<div class="col-md-6">
									<div class="mb-3">
										<label for="email" class="form-label">Email</label>
										<input type="email" class="form-control" id="email" placeholder="Nhập email" required>
									</div>
								</div>
								<div class="col-md-6">
									<div class="mb-3">
										<label for="phone" class="form-label">Số điện thoại</label>
										<input type="tel" class="form-control" id="phone" placeholder="Nhập số điện thoại" required>
									</div>
								</div>
							</div>

							<div class="mb-3">
								<label for="address" class="form-label">Địa chỉ</label>
								<input type="text" class="form-control" id="address" placeholder="Nhập địa chỉ giao hàng" required>
							</div>


							<h4 class="mt-4 mb-3">Phương thức vận chuyển</h4>

							<div class="shipping-option">
								<div class="form-check">
									<input class="form-check-input" type="radio" name="shippingMethod" id="expressShipping">
									<label class="form-check-label" for="expressShipping">
										Giao hàng hỏa tốc (3-4 ngày) - 100,000₫
									</label>
								</div>
							</div>
							<div class="shipping-option">
								<div class="form-check">
									<input class="form-check-input" type="radio" name="shippingMethod" id="economyShipping">
									<label class="form-check-label" for="economyShipping">
										Giao hàng tiết kiệm (5-7 ngày) - 30,000₫
									</label>
								</div>
							</div>

							<h4 class="mt-4 mb-3">Phương thức thanh toán</h4>
							<div class="payment-option">
								<div class="form-check">
									<input class="form-check-input" type="radio" name="paymentMethod" id="bankTransfer" checked>
									<label class="form-check-label" for="bankTransfer">
										Thanh toán chuyển khoản qua ngân hàng
									</label>
								</div>
							</div>
							<div class="payment-option">
								<div class="form-check">
									<input class="form-check-input" type="radio" name="paymentMethod" id="cod">
									<label class="form-check-label" for="cod">
										Thanh toán khi nhận hàng (COD)
									</label>
								</div>
							</div>

							<div class="d-grid gap-2 mt-4">
								<button type="submit" class="btn btn-primary">Tiếp tục thanh toán</button>
							</div>
						</form>
					</div>
				</div>
			</div>

			<div class="col-lg-4">
				<div class="card cart-sidebar">
					<div class="card-header">
						Đơn hàng của bạn
					</div>
					<div class="card-body">
						<div id="cartItemsContainer">
							<div class="product-item d-flex justify-content-between align-items-center">
								<div>
									<p class="mb-0" data-product-name="[Tên Sản Phẩm]"></p>
									<small class="text-muted" data-product-info="[Thông tin thêm] × [Số lượng]"></small>
								</div>
								<div class="text-end">
									<span data-product-price="[Giá]₫"></span>
								</div>
							</div>
						</div>

						<div class="mt-4">
							<label for="discountCode" class="form-label">Mã giảm giá</label>
							<div class="input-group">
								<input type="text" class="form-control" id="discountCode" placeholder="Nhập mã giảm giá">
								<button class="btn btn-outline-secondary" type="button">Sử dụng</button>
							</div>
						</div>

						<div class="order-summary mt-4">
							<div class="price-row">
								<span>Tạm tính:</span>
								<span id="subtotal">0₫</span>
							</div>
							<div class="price-row">
								<span>Phí vận chuyển:</span>
								<span id="shippingCost">Miễn phí</span>
							</div>
							<div class="price-row total">
								<span>Tổng cộng:</span>
								<span class="total-price" id="totalPrice">0₫</span>
							</div>
						</div>

						<div class="mt-4">
							<h5>Khách hàng thân thiết</h5>
							<a href="#" class="btn btn-outline-primary d-block">Đăng nhập</a>
						</div>
					</div>
				</div>
			</div>

			<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="loginModalLabel">Đăng nhập</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<form>
								<div class="mb-3">
									<label for="loginEmail" class="form-label">Email</label>
									<input type="email" class="form-control" id="loginEmail" required>
								</div>
								<div class="mb-3">
									<label for="loginPassword" class="form-label">Mật khẩu</label>
									<input type="password" class="form-control" id="loginPassword" required>
								</div>
								<button type="submit" class="btn btn-primary">Đăng nhập</button>
								<div class="mt-3">
									<p><a href="#">Bạn chưa có tài khoản? Đăng ký</a></p>
									<p><a href="#">Quên mật khẩu?</a></p>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>

			<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>