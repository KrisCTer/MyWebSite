@model ShoppingCart

<div class="container mt-4">
    <h2 class="mb-4 text-center" style="font-size: 28px; font-weight: 600;">Your Shopping Cart</h2>

    @if (Model.Items.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover" style="border-radius: 8px; overflow: hidden;">
                <thead class="thead-light">
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post" class="form-inline">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1"
                                           class="form-control form-control-sm" style="width: 80px; padding: 8px; border-radius: 10px;" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary ml-2" style="border-radius: 8px;">Update</button>
                                </form>
                            </td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@((item.Price * item.Quantity).ToString("C"))</td>
                            <td>
                                <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId"
                                   class="btn btn-sm btn-outline-danger" style="border-radius: 8px;">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary" style="border-radius: 12px; padding: 10px 20px;">
                <i class="fas fa-arrow-left"></i> Continue Shopping
            </a>
            <a asp-action="Checkout" class="btn btn-success" style="border-radius: 12px; padding: 10px 20px;">
                <i class="fas fa-credit-card"></i> Proceed to Checkout
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" style="border-radius: 12px; padding: 20px;">
            <h4>Your cart is empty</h4>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3" style="border-radius: 12px; padding: 10px 20px;">
                Start Shopping
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Confirm before removing item
            $('.btn-outline-danger').click(function(e) {
                return confirm('Are you sure you want to remove this item from your cart?');
            });
        });
    </script>
}
