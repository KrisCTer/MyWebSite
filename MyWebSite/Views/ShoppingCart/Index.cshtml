@model ShoppingCart

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4" style="font-weight: 600; font-size: 32px; letter-spacing: -0.5px;">Your Shopping Bag</h2>

    @if (Model.Items.Any())
    {
        <div class="table-responsive">
            <table class="table align-middle shadow-sm" style="border-radius: 18px; overflow: hidden;">
                <thead style="background-color: var(--primary-light);">
                    <tr>
                        <th style="font-weight: 500;">Product</th>
                        <th style="font-weight: 500;">Quantity</th>
                        <th style="font-weight: 500;">Unit Price</th>
                        <th style="font-weight: 500;">Total</th>
                        <th style="font-weight: 500;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr style="border-bottom: 1px solid #eee;">
                            <td>@item.Name</td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1"
                                           class="form-control form-control-sm me-2"
                                           style="width: 80px; border-radius: 10px; padding: 6px 12px;" />
                                    <button type="submit" class="btn btn-outline-primary btn-sm" style="border-radius: 8px;">Update</button>
                                </form>
                            </td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@(item.Price * item.Quantity).ToString("C")</td>
                            <td>
                                <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId"
                                   class="btn btn-outline-danger btn-sm" style="border-radius: 8px;">
                                    <i class="bi bi-trash"></i> Remove
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4 flex-wrap">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary"
               style="border-radius: 980px; padding: 10px 24px;">
                <i class="bi bi-arrow-left-circle"></i> Continue Shopping
            </a>

            <div class="text-end">
                <h5 class="mb-2" style="font-weight: 500;">Subtotal:</h5>
                <p class="fs-5 fw-semibold">@Model.Items.Sum(i => i.Price * i.Quantity).ToString("C")</p>
                <a asp-action="Checkout" class="btn btn-success"
                   style="border-radius: 980px; padding: 12px 30px; font-weight: 500;">
                    <i class="bi bi-credit-card"></i> Proceed to Checkout
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center p-5" style="border-radius: 16px;">
            <h4 class="mb-3">Your cart is currently empty</h4>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2"
               style="border-radius: 980px; padding: 10px 24px;">
                Start Shopping
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-outline-danger').click(function () {
                return confirm('Are you sure you want to remove this item from your cart?');
            });
        });
    </script>
}
