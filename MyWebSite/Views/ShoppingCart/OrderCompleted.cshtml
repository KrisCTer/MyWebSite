@model int
@{
    ViewData["Title"] = "Order Completed";
}

<div class="container py-5 text-center">
    <div class="mb-4">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
    </div>
    <h1 class="mb-3">Thank You for Your Order!</h1>
    <p class="mb-4">Your order has been placed successfully. Order ID: #@Model</p>
    <p class="mb-5">We've sent a confirmation to your email address. You can track your order status in your account.</p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="d-grid gap-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
                <a asp-controller="Order" asp-action="OrderDetail" asp-route-id="@Model" class="btn btn-outline">View Order Details</a>
            </div>
        </div>
    </div>
</div>