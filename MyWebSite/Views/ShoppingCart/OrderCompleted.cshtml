@model int

<div class="container mt-5">
    <div class="card" style="border-radius: 12px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <div class="card-header bg-success text-white" style="border-radius: 12px 12px 0 0;">
            <h2 class="mb-0">Order Completed</h2>
        </div>
        <div class="card-body">
            <p class="font-weight-bold" style="font-size: 18px;">
                Your order with ID <span class="text-success">@Model</span> has been successfully processed!
            </p>
            <div class="d-flex justify-content-between mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="border-radius: 12px;">
                    <i class="fas fa-home"></i> Back to Home
                </a>
                <a asp-action="OrderHistory" class="btn btn-outline-success" style="border-radius: 12px;">
                    <i class="fas fa-box"></i> View Order History
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Custom behavior can be added here
        });
    </script>
}
